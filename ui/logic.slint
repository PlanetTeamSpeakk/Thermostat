export struct Config {
    master-switch: bool,
    force: bool,
    target-temp: float,
    require-co2: bool,
    co2-target: float
}

export struct State {
    current-temp: float,
    co2: int,
    is-heating: bool
}

export global Singletons {
    in-out property<Config> config;
    in-out property<State> state;
}
